<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Movie App"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/addMovies"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="225dp"
        android:layout_marginRight="225dp"
        android:background="#2297F3"
        android:text="Add Movies to DB"
        app:layout_constraintEnd_toStartOf="@+id/searchMovies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <Button
        android:id="@+id/searchMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="61dp"

        android:layout_marginRight="61dp"
        android:background="#2297F3"
        android:text="Search for Movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addMovies"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <Button
        android:id="@+id/searchActors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:background="#2297F3"
        android:text="Search for Actors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchTitle"
        app:layout_constraintTop_toBottomOf="@+id/searchMovies" />

    <Button
        android:id="@+id/searchTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="225dp"
        android:layout_marginRight="225dp"
        android:background="#2297F3"
        android:text="Search from Title"
        app:layout_constraintEnd_toStartOf="@+id/searchActors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMovies" />

    <Button
        android:id="@+id/database"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#2297F3"
        android:text="Database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchActors" />
</androidx.constraintlayout.widget.ConstraintLayout>